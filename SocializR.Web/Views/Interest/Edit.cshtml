@model EditInterestViewModel

@{
    ViewData["Title"] = "Edit";
}

<h3><i class="fa fa-pencil"></i> Edit interest</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group row">
                <input asp-for="Id" hidden />
                <label asp-for="ParentId" class="col-sm-4 col-form-label">Parent Interest</label>
                <div class="col-sm-8">
                    <select asp-for="ParentId" asp-items="Model.Interests" class="form-control"></select>
                    <span asp-validation-for="ParentId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

