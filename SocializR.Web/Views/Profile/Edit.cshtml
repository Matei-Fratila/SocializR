@model ProfileVM
@using SocializR.Entities.Enums

@{
    ViewData["Title"] = "Edit";
}

@section Scripts{
    <script src="~/js/profile.js"></script>
    <script src="~/js/editProfile.js"></script>
}

<form method="post" enctype="multipart/form-data" asp-controller="Profile" asp-action="Edit">
    <div class="row avatar sections-layout">
        <div class="col-sm-3">
            <img class="img-responsive img-circle img-thumbnail header-photo" src="@Url.Action("RenderProfilePicture", "Profile", new { id = Model.Id })">
        </div>
        <div class="col-sm-9">
            <h2>@Model.FirstName @Model.LastName</h2>
        </div>
        @*<div class="form-group row">
            <div class="form-group row btn btn-primary btn-file">
                <i class="glyphicon glyphicon-camera"></i>
                Change photo
                <input asp-for="ProfilePhoto" type="file" accept="image/*" value="Add Photo" class="col-sm-6" />
            </div>
        </div>*@
        <div class="col-sm-1 small-margin">
            <span class="btn btn-primary btn-file">
                <i class="fa fa-camera"></i>
                change photo
                @* <input asp-for="ProfilePhoto" title="change profile photo" multiple data-toggle="tooltip" data-placement="bottom" type="file" accept="image/*" text="add photos"/> *@
            </span>
        </div>
    </div>

    <h3>Edit Profile</h3>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input asp-for="Id" type="hidden" class="id" />

    <div class="form-group row mb-3">
        <label asp-for="FirstName" class="col-sm-1 col-form-label"></label>
        <div class="col-sm-2">
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label asp-for="LastName" class="col-sm-1 col-form-label"></label>
        <div class="col-sm-2">
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mb-3">
        <label asp-for="BirthDate" class="col-sm-1 col-form-label"></label>
        <div class="col-sm-2">
            <input asp-for="BirthDate" class="form-control" />
            <span asp-validation-for="BirthDate" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mb-3">
        <label asp-for="CountyId" class="col-sm-1 col-form-label"></label>
        <div class="col-sm-2">
            <select asp-for="CountyId" asp-items="Model.Counties" class="form-control" id="County"></select>
            <span asp-validation-for="CountyId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mb-3">
        <label asp-for="CityId" class="col-sm-1 col-form-label"></label>
        <div class="col-sm-2">
            <select asp-for="CityId" asp-items="Model.Cities" class="form-control" id="City"></select>
            <span asp-validation-for="CityId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mb-3" row>
        <label asp-for="Gender" class="col-sm-1 col-form-label">Gender</label>
        <div class="col-sm-2">
            @Html.RadioButtonFor(m => m.Gender, GenderTypes.Unspecified, new { id = "" }) @GenderTypes.Unspecified
            @Html.RadioButtonFor(m => m.Gender, GenderTypes.Female, new { id = "" }) @GenderTypes.Female
            @Html.RadioButtonFor(m => m.Gender, GenderTypes.Male, new { id = "" }) @GenderTypes.Male
        </div>
    </div>

    <div class="form-group row mb-3" row>
        <label asp-for="IsPrivate" class="col-sm-1 col-form-label">Privacy</label>
        <div class="col-sm-2">
            @Html.RadioButtonFor(m => m.IsPrivate, false, new { id = "" }) Public
            @Html.RadioButtonFor(m => m.IsPrivate, true, new { id = "" }) Private
        </div>
    </div>

    <div class="form-group row mb-3" row>
        <label asp-for="MyInterests" class="col-sm-1 col-form-label"></label>
        <div class="col-sm-2">
            <select asp-for="MyInterests" asp-items="Model.Interests" class="js-example-basic-multiple js-states form-control" id="select2interests" multiple="multiple"></select>
        </div>
    </div>

    @if (Model.IsDataInvalid)
    {
        <span class="text-danger">Email sau parola incorecte</span>
    }

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" id="save-changes" />
    </div>
</form>




