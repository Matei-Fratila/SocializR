@model ProfileViewModel

@{
    ViewData["Title"] = "Edit Profile";
}

@section Styles {
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/select2/css/select2.css" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css"
              referrerpolicy="no-referrer"
              crossorigin="anonymous"
              integrity="sha512-nMNlpuaDPrqlEls3IX/Q56H36qvBASwb3ipuo3MxeWbsQB1881ox0cRv7UPTgBlriqoynt35KjEwgGUeUXIPnw==" />
    </environment>
}

@section Scripts {
    <script src="~/js/profile.js"></script>
    <script src="~/js/edit-profile.js"></script>
    <environment include="Development">
        <script src="~/lib/select2/js/select2.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"
                referrerpolicy="no-referrer"
                crossorigin="anonymous"
                integrity="sha512-2ImtlRlf2VVmiGZsjm9bEyhjGW4dU7B6TNwh/hx/iSByxNENtj3WVE6o/9Lj4TJeVXPi4bnOIMXFIJJAeufa0A==">
        </script>
    </environment>
}

<form method="post" enctype="multipart/form-data" asp-controller="Profile" asp-action="Edit">

    <div class="col-sm-3">
        <img class="rounded-circle shadow avatar-image" alt="Avatar" src="@Url.Content(Model.FilePath)" />

        <input asp-for="ProfilePhoto" type="file" accept="image/*" value="Add Photo">
        <span asp-validation-for="ProfilePhoto"></span>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input asp-for="Id" type="hidden" class="id" />

    <div class="form-group row mb-3">
        <label asp-for="FirstName" class="col-sm-1 col-form-label"></label>
        <div class="col-sm-2">
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label asp-for="LastName" class="col-sm-1 col-form-label"></label>
        <div class="col-sm-2">
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mb-3">
        <label asp-for="BirthDate" class="col-sm-1 col-form-label"></label>
        <div class="col-sm-2">
            <input asp-for="BirthDate" class="form-control" />
            <span asp-validation-for="BirthDate" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mb-3">
        <label asp-for="CountyId" class="col-sm-1 col-form-label"></label>
        <div class="col-sm-2">
            <select asp-for="CountyId" asp-items="ViewBag.Counties" class="form-control" id="County"></select>
            <span asp-validation-for="CountyId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mb-3">
        <label asp-for="CityId" class="col-sm-1 col-form-label"></label>
        <div class="col-sm-2">
            <select asp-for="CityId" asp-items="ViewBag.Cities" class="form-control" id="City"></select>
            <span asp-validation-for="CityId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mb-3" row>
        <label asp-for="Gender" class="col-sm-1 col-form-label">Gender</label>
        <div class="col-sm-2">
            @Html.RadioButtonFor(m => m.Gender, GenderTypes.Unspecified, new { id = "" }) @GenderTypes.Unspecified
            @Html.RadioButtonFor(m => m.Gender, GenderTypes.Female, new { id = "" }) @GenderTypes.Female
            @Html.RadioButtonFor(m => m.Gender, GenderTypes.Male, new { id = "" }) @GenderTypes.Male
        </div>
    </div>

    <div class="form-group row mb-3" row>
        <label asp-for="IsPrivate" class="col-sm-1 col-form-label">Privacy</label>
        <div class="col-sm-2">
            @Html.RadioButtonFor(m => m.IsPrivate, false, new { id = "" }) Public
            @Html.RadioButtonFor(m => m.IsPrivate, true, new { id = "" }) Private
        </div>
    </div>

    <div class="form-group row mb-3" row>
        <label asp-for="Interests" class="col-sm-1 col-form-label"></label>
        <div class="col-sm-2">
            <select asp-for="Interests" asp-items="ViewBag.Interests" class="select2 form-control" multiple="multiple"></select>
        </div>
    </div>

    @if (Model.IsDataInvalid)
    {
        <span class="text-danger">Email sau parola incorecte</span>
    }

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" id="save-changes" />
    </div>
</form>




