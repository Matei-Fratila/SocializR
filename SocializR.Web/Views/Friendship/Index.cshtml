@model IPagedList<UserVM>
@using X.PagedList.Mvc.Core
@using X.PagedList

@section Scripts{
    <script src="~/js/friends.js"></script>
}

<div class="text-center top-bottom-margin">
    <a href="@Url.Action("Index", "Friendship")" class="btn btn-default disabled">Your Friends</a>
    <a href="@Url.Action("Index", "FriendRequest")" class="btn btn-default">Friend Requests</a>
</div>
@if (Model.Count == 0)
{
    <h2 class="text-center">You have no friends</h2>
}
else
{
    <ul id="friends" class="nav">
        @foreach (var user in Model)
        {
            @await Html.PartialAsync("_Friend", user);
        }
    </ul>
}

<input type="hidden" id="page" />
<div class="text-center">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>







