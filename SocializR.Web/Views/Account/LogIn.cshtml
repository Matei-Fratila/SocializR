@model LogInViewModel

@{
    ViewData["Title"] = "Login";
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<h2>Login</h2>or <a asp-controller="Account" asp-action="Register">Register</a> if you don't have an account
<hr />

<form asp-action="Login">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3 row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-7">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

    </div>

    <input type="hidden" asp-for=@Model.ReturnUrl />

    <div class="mb-3 row">
        <label asp-for="Password" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-7">
            <input type="password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-dark mb-3">Login</button>
</form>

