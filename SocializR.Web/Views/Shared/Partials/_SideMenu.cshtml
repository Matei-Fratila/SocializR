@inject UserManager<User> UserManager
@inject CurrentUser CurrentUser

<nav id="side-menu" class="col-2 d-md-block bg-light collapse shadow bg-body-secondary p-4 vh-100 fixed-bottom">
    <div class="position-sticky">
        <ul class="nav flex-column">
            <li>
                <a asp-controller="Profile" asp-action="Index" asp-route-id=@UserManager.GetUserId(User) aria-current="page">
                    <img class="rounded-circle shadow img-thumbnail user-photo" id="avatar-photo" src="~/images/noprofile.png" />
                    @CurrentUser.FirstName @CurrentUser.LastName
                </a>
            </li>
            <li class="mt-3">
                <a asp-controller="Home" asp-action="Index" class="">
                    <i class="fa fa-fw fa-list-alt"></i> Feed
                </a>
            </li>
            <li class="mt-3">
                <a asp-controller="Profile" asp-action="Index" asp-route-id=@UserManager.GetUserId(User) class="">
                    <i class="fa fa-fw fa-eye"></i> View Profile
                </a>
            </li>
            <li class="mt-3">
                <a asp-controller="Profile" asp-action="Edit" asp-route-id=@UserManager.GetUserId(User) class="">
                    <i class="fa fa-fw fa-edit"></i> Edit Profile
                </a>
            </li>
            <li class="mt-3">
                <a asp-controller="Album" asp-action="Index" class="">
                    <i class="fa fa-fw fa-image-portrait"></i> Photos
                </a>
            </li>
            <li class="mt-3">
                <a asp-controller="Friendship" asp-action="Index" class="">
                    <i class="fa fa-fw fa-user-friends"></i> Friends
                </a>
            </li>
        </ul>

        @if (User.IsInRole("Administrator"))
        {
            <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                <span>Administrator</span>
            </h6>
            <ul class="nav flex-column mb-2">
                <li class="mt-3">
                    <a asp-controller="County" asp-action="Index" class="">
                        <i class="fa fa-fw fa-globe-europe"></i> Map
                    </a>
                </li>
                <li class="mt-3">
                    <a asp-controller="Interest" asp-action="Index" class="">
                        <i class="fa fa-fw fa-music"></i> Interests
                    </a>
                </li>
                <li class="mt-3">
                    <a asp-controller="User" asp-action="Index" class="">
                        <i class="fa fa-fw fa-user"></i> Users
                    </a>
                </li>
                <li class="mt-3">
                    <a asp-controller="Statistics" asp-action="Index" class="">
                        <i class="fa fa-fw fa-bar-chart"></i> Statistics
                    </a>
                </li>
            </ul>
        }
    </div>
</nav>