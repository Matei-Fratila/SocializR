@model AlbumsViewModel

@{
    ViewData["Title"] = "Create Album";
}

@section Styles{
    <link href="~/css/media.css" rel="stylesheet" />
    <link href="~/css/album.css" rel="stylesheet" />
}

@section Scripts {
    <environment include="Development">
        <script src="~/lib/linkify-js/dist/linkify.js"></script>
        <script src="~/lib/linkify-jquery/dist/linkify-jquery.js"></script>
    </environment>
    <script src="~/js/gallery.js"></script>
    <script src="~/js/album.js"></script>
}

<h3>Your albums</h3>
<hr />

@await Html.PartialAsync("_Create", Model.NewAlbum)

<div class="albums-container row row-cols-1 row-cols-md-3 g-4">
    @foreach (var album in Model.Albums)
    {
        @await Html.PartialAsync("_Album", album);
    }
</div>

<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-content">
        <div class="modal-header">
            <a class="close" data-dismiss="modal">&times;</a>
            <h4 class="modal-title">album</h4>
        </div>
        <div class="modal-body inherited-size" id="modal-gallery">
            ...
        </div>
    </div>
</div>

