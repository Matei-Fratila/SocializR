@model List<AlbumViewModel>

@{
    ViewData["Title"] = "Create Album";
}

@section Styles{
    <link href="~/css/media.css" rel="stylesheet" />
    <link href="~/css/album.css" rel="stylesheet" />
}

@section Scripts {
    <script src="~/js/gallery.js"></script>
    <script src="~/js/album.js"></script>
}

<h3><i class="fa fa-photo-film"></i> Your albums</h3>
<hr />
<a asp-action="Create" asp-controller="Album" class="btn btn-success mb-4"><i class="fa fa-plus"></i> Create new album</a>

<div class="card-group albums-container row row-cols-1 row-cols-md-3 g-4">
    @foreach (var album in Model)
    {
        @await Html.PartialAsync("_Album", album);
    }
</div>

<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-content">
        <div class="modal-header">
            <a class="close" data-dismiss="modal">&times;</a>
            <h4 class="modal-title">album</h4>
        </div>
        <div class="modal-body inherited-size" id="modal-gallery">
            ...
        </div>
    </div>
</div>
