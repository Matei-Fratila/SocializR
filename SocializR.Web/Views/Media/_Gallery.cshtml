@using SocializR.Entities.Enums
@model List<MediaModel>

@{

}

@section scripts{
    <link href="~/css/gallery.css" rel="stylesheet" />
    <script src="~/js/app/gallery.js"></script>
}

<!-- Carousel -->
<div id="myCarousel" class="carousel slide" data-ride="carousel">

    <div class="carousel-inner" style=" width:auto; height: 100% !important;">
        @for (var i = 0; i < Model.Count; i++)
        {
        <div class="item">
            @if (Model[i].Type == MediaTypes.Image)
            {
                <img src="@Url.Action("Render", "Media", new { id = @Model[i].Id })" class="center-block inherited-size">
            }
            else if (Model[i].Type == MediaTypes.Video)
            {
                <video controls class="center-block inherited-size" alt="A generic square placeholder image with rounded corners in a figure.">
                    <source src="@Url.Action("Render", "Media", new { id = Model[i].Id })" type="video/mp4">
                    <source src="@Url.Action("Render", "Media", new { id = Model[i].Id })" type="video/m4v">
                </video>

            }
            <div class="text-center search-for-link">@Model[i].Caption</div>
        </div>
        }
    </div>

    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<script src="~/js/app/gallery.js"></script>